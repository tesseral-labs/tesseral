{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2015",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "strict": true
  },
  "exclude": ["node_modules", "**/*.js", "**/*.mjs", "**/*.jsx"]
}
